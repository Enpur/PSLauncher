<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PSForeverLauncher.StackItems"
             xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="PSForeverLauncher.StackItems.UpdateInfo"
             mc:Ignorable="d"
             Foreground="White"
             FontFamily="{DynamicResource MaterialDesignFont}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
            <Border CornerRadius="2" BorderBrush="White" BorderThickness="1">
                <StackPanel>
                    <TextBlock x:Name="UpdateTitle" FontSize="24" />
                    <TextBlock x:Name="UpdateTime" FontSize="16" />
                    <Separator />
                    <TextBlock x:Name="UpdateInformation" />
                </StackPanel>

            </Border>
    </Grid>
</UserControl>
